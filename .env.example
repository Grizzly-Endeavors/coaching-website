# Database
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=overwatch_coaching
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# NextAuth
# For development, use: http://localhost:3000
# For production, use your actual domain
NEXTAUTH_URL=https://your-domain.com
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Google Calendar API
# Option 1: OAuth 2.0 Credentials
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your_refresh_token_from_oauth_flow

# Option 2: Service Account (Recommended for server-side)
# GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Calendar Configuration
GOOGLE_CALENDAR_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_CALENDAR_WEBHOOK_SECRET=your_webhook_secret

# Public Calendar Embed (Optional - for booking page)
# Get this from Google Calendar > Settings > Integrate calendar
# Example: https://calendar.google.com/calendar/appointments/schedules/YOUR_SCHEDULE_ID
NEXT_PUBLIC_GOOGLE_CALENDAR_EMBED_URL=

# Webhook Channel Info (Set automatically by setup-calendar-webhook script)
GOOGLE_CALENDAR_CHANNEL_ID=
GOOGLE_CALENDAR_RESOURCE_ID=

# Discord Bot Integration
# Create a Discord bot at https://discord.com/developers/applications
# Required permissions: Send Messages (in DM context)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
# Your Discord User ID (right-click your profile > Copy User ID with Developer Mode enabled)
ADMIN_DISCORD_USER_ID=your_discord_user_id_here

# Discord OAuth (for user notifications without server requirement)
# From the same Discord application:
DISCORD_CLIENT_ID=your_discord_application_client_id
DISCORD_CLIENT_SECRET=your_discord_application_client_secret
# For development: http://localhost:3000/api/auth/discord/callback
# For production: https://yourdomain.com/api/auth/discord/callback
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback

# Admin
ADMIN_EMAIL=your-email@example.com

# Stripe Payment Processing
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Get this from https://dashboard.stripe.com/webhooks after creating a webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs (Create these in Stripe Dashboard)
# Review on My Time (async review)
STRIPE_PRICE_ID_REVIEW_ASYNC=price_your_async_review_price_id
# VOD Review (live session)
STRIPE_PRICE_ID_VOD_REVIEW=price_your_vod_review_price_id
# Live Coaching (real-time)
STRIPE_PRICE_ID_LIVE_COACHING=price_your_live_coaching_price_id

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token
